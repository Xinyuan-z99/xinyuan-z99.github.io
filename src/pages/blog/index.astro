---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (
  await getCollection('blog', ({ data }) => data.draft !== true)
).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// ‚úÖ Êåâ category ÂàÜÁªÑ
const groupedPosts = posts.reduce((acc, post) => {
  const category = post.data.category ?? 'Other';
  if (!acc[category]) acc[category] = [];
  acc[category].push(post);
  return acc;
}, {});

// ‚úÖ ÂèØÈÄâÔºöÂõ∫ÂÆöÂàÜÁ±ªÊòæÁ§∫È°∫Â∫èÔºàÊ≤°ÊúâÂàóÂá∫Êù•ÁöÑÂàÜÁ±ª‰ºöÊéíÂú®ÊúÄÂêéÔºâ
const CATEGORY_ORDER = ['Network', 'Work Log', 'Life', 'Other'];
const sortedCategories = Object.keys(groupedPosts).sort((a, b) => {
  const ia = CATEGORY_ORDER.indexOf(a);
  const ib = CATEGORY_ORDER.indexOf(b);
  const ra = ia === -1 ? 999 : ia;
  const rb = ib === -1 ? 999 : ib;
  return ra - rb || a.localeCompare(b);
});
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      /* Blog È°µËÉåÊôØÔºöÊõ¥Ê∑°ÁöÑÁ¥´Ëâ≤Ê∏êÂèò */
      body {
        margin: 0;
        min-height: 100vh;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
          sans-serif;
        background: linear-gradient(180deg, #fbfaff 0%, #fdfcff 55%, #ffffff 100%);
        background-attachment: fixed;
      }

      main {
        width: 960px;
        max-width: calc(100% - 2em);
        margin: 3rem auto 4rem;
        padding: 0 1.5rem;
      }

      .page-title {
        margin: 0 0 0.5rem;
        font-size: 2.2rem;
      }

      .page-subtitle {
        margin: 0 0 2rem;
        color: rgb(var(--gray));
      }

      /* ‚úÖ ÂàÜÁ±ªÂùóÊ†∑Âºè */
      .category-block {
        margin-top: 2.5rem;
      }

      .category-title {
        margin: 0 0 1rem;
        font-size: 1.4rem;
        color: rgb(var(--black));
      }

      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }

      ul li {
        width: 100%;
      }

      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }

      ul li a {
        display: block;
      }

      .title {
        margin: 0 0 0.25rem;
        color: rgb(var(--black));
        line-height: 1.2;
      }

      .date {
        margin: 0;
        color: rgb(var(--gray));
        font-size: 0.9rem;
      }

      ul li a:hover .title,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }

      @media (max-width: 720px) {
        main {
          margin: 2rem auto 3rem;
        }

        ul {
          gap: 0.5rem;
        }

        ul li {
          width: 100%;
          text-align: left;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <section>
        <h1 class="page-title">üìù Blog ¬∑ Notes & Growth</h1>
        <p class="page-subtitle">
          Notes and thoughts about networking, Japanese, and life in Japan.
        </p>
      </section>

      <section>
        {
          sortedCategories.map((category) => (
            <div class="category-block">
              <h2 class="category-title">üìÇ {category}</h2>
              <ul>
                {
                  groupedPosts[category].map((post) => (
                    <li>
                      <a href={`/blog/${post.id}/`}>
                        <h4 class="title">{post.data.title}</h4>
                        <p class="date">
                          <FormattedDate date={post.data.pubDate} />
                        </p>
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
          ))
        }
      </section>
    </main>
    <Footer />
  </body>
</html>
