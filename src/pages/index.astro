---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (
  await getCollection('blog', ({ data }) => data.draft !== true)
).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());


const groupedPosts = posts.reduce((acc, post) => {
  const cat = post.data.category;
  if (!cat) return acc;
  (acc[cat] ??= []).push(post);
  return acc;
}, {});

const CATEGORY_ORDER = ['Network', 'Work Log', 'Life'];

const sortedCategories = Object.keys(groupedPosts).sort((a, b) => {
  const ia = CATEGORY_ORDER.indexOf(a);
  const ib = CATEGORY_ORDER.indexOf(b);
  const ra = ia === -1 ? 999 : ia;
  const rb = ib === -1 ? 999 : ib;
  return ra - rb || a.localeCompare(b);
});

const CATEGORY_ICON = 'üìÅ';
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      body {
        margin: 0;
        min-height: 100vh;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
          sans-serif;
        background: linear-gradient(180deg, #fbfaff 0%, #fdfcff 55%, #ffffff 100%);
        background-attachment: fixed;
      }

      main {
        width: 960px;
        max-width: calc(100% - 2em);
        margin: 3rem auto 4rem;
        padding: 0 1.5rem;
      }

      .page-title {
        margin: 0 0 0.5rem;
        font-size: 2.2rem;
      }

      .page-subtitle {
        margin: 0 0 2rem;
        color: rgb(var(--gray));
      }

      .category-block {
        border-top: 1px solid rgba(0, 0, 0, 0.12);
        padding-top: 1.2rem;
        margin-top: 1.2rem;
      }

      .category-header {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        margin: 0 0 0.8rem;
        font-weight: 800;
        font-size: 1.35rem;
        color: rgb(var(--black));
      }

      .category-icon {
        font-size: 1.35rem;
        line-height: 1;
      }

      .post-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 1.35rem;
      }

      .post-item a {
        display: block;
        text-decoration: none;
      }

      .post-title {
        margin: 0;
        font-size: 1.15rem;
        font-weight: 500;
        color: rgb(var(--black));
        line-height: 1.35;
      }

      .post-date {
        margin: 0.3rem 0 0;
        color: rgb(var(--gray));
        font-size: 0.95rem;
      }

      .post-item a:hover .post-title,
      .post-item a:hover .post-date {
        color: rgb(var(--accent));
      }

      @media (max-width: 720px) {
        main {
          margin: 2rem auto 3rem;
        }
        .category-header {
          font-size: 1.2rem;
        }
        .post-title {
          font-size: 1.05rem;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <section>
        <h1 class="page-title">üìù Blog ¬∑ Notes & Growth</h1>
        <p class="page-subtitle">
          Notes and thoughts about networking, Japanese, and life in Japan.
        </p>
      </section>

      <section>
        {
          sortedCategories.map((cat) => (
            <div class="category-block">
              <div class="category-header">
                <span class="category-icon">{CATEGORY_ICON}</span>
                <span>{cat}</span>
              </div>

              <ul class="post-list">
                {
                  groupedPosts[cat].map((post) => (
                    <li class="post-item">
                      <a href={`/blog/${post.id}/`}>
                        <p class="post-title">{post.data.title}</p>
                        <p class="post-date">
                          <FormattedDate date={post.data.pubDate} />
                        </p>
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
          ))
        }
      </section>
    </main>
    <Footer />
  </body>
</html>
