<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }

  h2 {
    margin: 0;
    font-size: 1em;
    line-height: 1;
    white-space: nowrap;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    flex-wrap: nowrap;
    min-width: 0;
  }

  .internal-links {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: nowrap;
    white-space: nowrap;
    min-width: 0;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .internal-links::-webkit-scrollbar {
    display: none;
  }
  .internal-links {
    scrollbar-width: none;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
    white-space: nowrap;
    flex: 0 0 auto;
  }

  nav a.active {
    border-bottom-color: var(--accent);
  }

  /* ğŸŒŸ æ˜Ÿç¾¤å®¹å™¨ */
  .star-cluster {
    display: flex;
    align-items: center;
    gap: 4px;
    margin-left: 8px;
    flex-shrink: 0;
  }

  /* ğŸŒŸ å•é¢—æ˜Ÿæ˜Ÿ */
  .star {
    font-size: 13px;
    color: #d4af37; /* é‡‘è‰²åŸºè°ƒ */
    opacity: 0.7;
    animation: star-pulse 2.8s ease-in-out infinite;
  }

  /* é”™å³°åŠ¨ç”»ï¼ˆå…³é”®ï¼‰ */
  .star-1 { animation-delay: 0s; }
  .star-2 { animation-delay: 0.6s; opacity: 0.55; }
  .star-3 { animation-delay: 1.2s; opacity: 0.4; }

  @keyframes star-pulse {
    0% {
      transform: scale(1);
      opacity: 0.4;
    }
    50% {
      transform: scale(1.4);
      opacity: 0.95;
    }
    100% {
      transform: scale(1);
      opacity: 0.4;
    }
  }

  /* ğŸ“± æ‰‹æœºç«¯æ›´å…‹åˆ¶ */
  @media (max-width: 720px) {
    .star {
      font-size: 11px;
    }
    .star-cluster {
      gap: 3px;
    }
  }
</style>
