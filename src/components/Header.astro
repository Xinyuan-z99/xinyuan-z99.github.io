---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>

    <div class="internal-links" aria-label="Primary navigation">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>

    <!-- 右上角跳动的小星星 -->
    <div class="pulse-star" aria-hidden="true">✦</div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }

  h2 {
    margin: 0;
    font-size: 1em;
    line-height: 1;
    white-space: nowrap;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    flex-wrap: nowrap;
    min-width: 0;
  }

  .internal-links {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: nowrap;
    white-space: nowrap;
    min-width: 0;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .internal-links::-webkit-scrollbar {
    display: none;
  }

  .internal-links {
    scrollbar-width: none;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
    white-space: nowrap;
    flex: 0 0 auto;
  }

  nav a.active {
    border-bottom-color: var(--accent);
  }

  /* ✦ 小星星动画 */
  .pulse-star {
    margin-left: 8px;
    font-size: 14px;
    color: var(--accent);
    opacity: 0.8;
    flex-shrink: 0;

    animation: star-pulse 2.4s ease-in-out infinite;
  }

  @keyframes star-pulse {
    0% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.35);
      opacity: 1;
    }
    100% {
      transform: scale(1);
      opacity: 0.5;
    }
  }

  /* 手机端：稍微小一点，更克制 */
  @media (max-width: 720px) {
    .pulse-star {
      font-size: 12px;
    }
  }
</style>
